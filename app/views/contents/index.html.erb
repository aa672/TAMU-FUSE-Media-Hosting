<%= render "layouts/flash" %>

<h1>Contents</h1>

<table>
  <thead>
    <tr>
      <th>Title |</th>
      <th>Content ID |</th>
      <th>Content Type |</th>
      <th>Content Storage Link |</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.title %></td> 
        <td><%= content.content_id %></td>
        <td><%= content.content_type %></td>
        <td><%= content.content_storage_link %></td> 
        <td><%= link_to "Download", content.attachment_url %></td>   
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Content', contents_middle_path %>

<br>

<%= link_to 'Back to Home', module_sections_path %>
