<%= form_with(model: page) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :module_name %>
    <%= form.select :module_name, ModuleSection.order(:module_name).map { |module_section| [module_section.module_name, module_section.module_name] }, include_blank: true, id: "name_of_the_module_section_name_select_box" %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Content ID</th>
        <th>Content Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contents.each do |content| %>
        <tr>
          <td><%= content.contentID %></td>
          <td><%= content.title %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="field">
    <%= form.label :content_ids %>
    <%= collection_select(:page, :content_ids, @contents, :contentID, :title, {include_hidden: false}, {:multiple => true}) %>
  </div>

  <div class="field">
    <%= form.label :page_name %>
    <%= form.text_field :page_name %>
  </div>

  <div class="field">
    <%= form.label :page_description %>
    <%= form.text_field :page_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
